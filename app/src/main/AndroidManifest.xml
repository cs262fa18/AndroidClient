<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.calvin.cs262.teama.timetracker">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".startUp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".addProject"
            android:label="@string/title_activity_add_project"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.calvin.cs262.teama.timetracker.MainActivity" />
        </activity>
        <activity
            android:name=".addingTimes"
            android:label="@string/title_activity_adding_times"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.calvin.cs262.teama.timetracker.MainActivity" />
        </activity>
        <activity
            android:name=".timePicker"
            android:label="@string/title_activity_time_picker"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".datePicker"
            android:label="@string/title_activity_date_picker"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".viewTimes"
            android:label="@string/title_activity_view_times"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.calvin.cs262.teama.timetracker.MainActivity" />
        </activity>
        <activity
            android:name=".signInPage"
            android:label="@string/title_activity_sign_in_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".removeTimes"
            android:label="@string/title_activity_remove_times"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.calvin.cs262.teama.timetracker.MainActivity" />
        </activity>
        <activity
            android:name=".LoginPage"
            android:label="@string/title_activity_login_page" />
        <activity
            android:name=".graphsViewer"
            android:label="@string/title_activity_graphs_viewer"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.calvin.cs262.teama.timetracker.MainActivity" />
        </activity>
    </application>

</manifest>